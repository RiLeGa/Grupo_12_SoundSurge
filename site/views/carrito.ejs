<!DOCTYPE html>
<html lang="es">
    <%- include ("./partials/head",{title: "Tu carrito"}) %>
</head>
<body class="carrito">
    <%- include ("./partials/header") %> 
                                                <!--  M A I N  -->
    <main>
        <% if (producto.stock !== 0) { %>
        <section>
            <h1>Mi carrito</h1>
        </section>
            <!-- Producto, precio, etc -->
        <section>
                
        </section>
            <!-- Productos -->
        <section class="caja-principal-carrito">
            
                <div class="caja-carrito">
                    <article>
                        <div class="caja-guitarra">
                            <h2>PRODUCTO</h2>
                            <img class="guitarra" src="/images/<%= producto.imagenes[0].nombre %>" alt="Imagen principal">
                            <p><%= producto.titulo %></p>
                        </div>


                        <div class="caja-secundaria">
                            <h2>CANTIDAD</h2>
                        <div class="contador">
                            <button class="restar">-</button>
                        <input class="numero" type="number">
                        <button class="sumar">+</button>
                        </div>
                            </div>


                            <div class="caja-secundaria">
                            <h2>PRECIO</h2>
                        <span class="primerprecio">$<%= producto.precio %></span>
                            </div>
                            <div class="caja-secundaria">
                        <h2 >DESCUENTO</h2>
                        <span class="primer-descuento">-$<%= (producto.precio * producto.descuento / 100) %></span>
                            </div>
                        
                        
                        <div class="precio-descuento">
                            <h2>TOTAL</h2>
                            <h3 class="precio">$<%= producto.precio - (producto.precio * producto.descuento / 100)%></h3>
                            <% if (producto.descuento !== 0) { %>
                                <p class="precio">$<%= producto.precio %></p>
                            <% } %>
                        </div>
                        
                        
                    </article>
                    
                </div>
            </section>
           
            <!-- Subtotal, Total -->
            <section>
                <ul class="cuenta">
                
                    <h4 class="total">TOTAL : </h4>
                    <div >
                        <h3 class="precio-final" >$<%= producto.precio - (producto.precio * producto.descuento / 100)%></h3>
                        <% if (producto.descuento !== 0) { %>
                            <p class="precio-final">$<%= producto.precio %></p>
                        <% } %>
                    </div>
                
                </ul>
            </section>
            <section class="botones">
                <div>
                    <button class="comprar">FINALIZAR COMPRA</button>
                </div>
                <div>
                    <a href="/">
                    <button class="mas">BUSCAR MAS PRODUCTOS</button>
                     </a>
                </div>
            </section>
        </section>
        <% } else{%>
            <div class="sin-stock">
                <img src="/images/dinosaurio.png" alt="">
                <h3>Por el momento no hay stock de este producto.</h3>
            <% } %>
    </main>
                                            <!--  F O O T E R  -->
    <%- include ("./partials/footer") %> 
</body>
</html>