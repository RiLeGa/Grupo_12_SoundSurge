                    <button type="submit"><i class="fas fa-search"></i></button>
                </form>
            </div>
        </section>
            
        <% if (locals.userLogin) { %>
            <div class="carrito1">
                <a href="/productos/carrito" target="_blank" class="btn-neon"><i class="fas fa-shopping-cart"></i></a>
            </div>
        <% } %>
       
                
       
        <div class="usuario">
            <input type="checkbox" name="perfil" id="perfil">   
