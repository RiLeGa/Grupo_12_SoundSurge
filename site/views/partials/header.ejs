                        <button class="logout" type="submit">Cerrar Sesion</button> 
                        </form>
                    <% } else { %>
                        <li><a class="btn-neon" href="/users/login">Ingresar</a></li>
                        <li><a class="btn-neon" href="/users/register">Registrarse</a></li> 
                    <% } %>
                    
                </ul>
