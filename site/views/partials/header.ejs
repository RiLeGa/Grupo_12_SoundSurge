                <input type="checkbox" name="perfil" id="perfil">
                <label class="perfilU btn-neon" for="perfil"><img class="usuario"  src="/images/users/<%= locals.userLogin.imagen %>" alt=""><h2>Hola! <%= locals.userLogin.nombre %></h2>
                </label>
            <% } else { %>
                <input type="checkbox" name="perfil" id="perfil">
                <label class="sinLog btn-neon" for="perfil"><i class="fas fa-user-circle"></i><h2>Hola!</h2></label>
            <% } %>
            <nav class="opcionesDePerfil">
                <ul>
                    <% if (locals.userLogin) { %>
                        <li><a class="btn-neon" href="/users/perfil">Perfil</a></li>
